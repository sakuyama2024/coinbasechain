# CoinbaseChain Configuration File
# Generated automatically by Ansible deployment

# Network: {{ coinbasechain_network }}

# Logging
loglevel=info
debug=network

# Connection settings
listen=1
server=1
maxconnections={{ max_connections | default(20) }}

{% if coinbasechain_network == 'regtest' %}
# Regtest specific settings
regtest=1

# Automatic peer connections for regtest network
{% for host, vars in hostvars.items() %}
{% if host != inventory_hostname %}
# Connect to {{ host }}
addnode={{ vars.ansible_host }}:{{ vars.p2p_port }}
{% endif %}
{% endfor %}
{% endif %}

{% if coinbasechain_network == 'testnet' %}
# Testnet specific settings
testnet=1
{% endif %}

# Additional custom settings
{% if custom_config is defined %}
{{ custom_config }}
{% endif %}